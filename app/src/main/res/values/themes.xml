<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/light_primary</item>
        <item name="android:windowBackground">@color/light_primary</item>
        <item name="colorSecondary">@color/white</item>

        <item name="android:textSize">20sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>

        <item name="hintTextColor">@color/label_dark_tertiary</item>
        <item name="colorAccent">@color/blue</item>
        
        <item name="colorPrimaryDark">@color/light_primary</item>
        <item name="android:navigationBarColor">@color/light_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:datePickerStyle">@style/DatePickerStyle</item>

        <item name="snackbarStyle">@style/CustomSnackBarStyle</item>

        <item name="alertDialogStyle">@style/CustomAlertDialog</item>
    </style>'

    <style name="TaskTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="CustomAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert" >
        <item name="animationMode">fade</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="CloseColorImage">
        <item name="tint">@color/black</item>
    </style>

    <style name="CustomSnackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="android:background">@color/back_light_primary</item>
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/color_dark_gray</item>
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="android:layout_margin">8dp</item>
        <item name="elevation">6dp</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="DatePickerStyle" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:startYear">2023</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@color/blue</item>
    </style>

    <style name="GrayElements" >
        <item name="tint">@color/label_light_tertiary</item>
        <item name="android:textColor">@color/label_light_tertiary</item>
        <item name="backgroundTint">@color/label_light_tertiary</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textColor">@color/label_light_primary</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="height">37.5sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/label_light_primary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />
</resources>